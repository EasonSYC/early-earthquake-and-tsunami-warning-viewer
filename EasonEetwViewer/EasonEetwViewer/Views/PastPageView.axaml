<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:EasonEetwViewer.ViewModels"
             xmlns:m="using:EasonEetwViewer.Models"
			 xmlns:mapsui="using:Mapsui.UI.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EasonEetwViewer.Views.PastPageView"
             x:DataType="vm:PastPageViewModel">

	<Design.DataContext>
		<vm:PastPageViewModel/>
	</Design.DataContext>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="200"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="300"/>
		</Grid.ColumnDefinitions>

		<Grid Grid.Column="1"
			  Grid.Row="0">
			<DockPanel>
				<mapsui:MapControl x:Name="MapControl"/>
			</DockPanel>
			<Canvas>
			</Canvas>
		</Grid>
		<Grid Grid.Column="2"
		      Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="Auto"/>
			</Grid.RowDefinitions>
			<Button Grid.Column="0"
					Grid.Row="0"
					Content="Refresh Earthquake List"
					Command="{Binding RefreshEarthquakeListCommand}"
					HorizontalAlignment="Center"/>
			<ListBox Grid.Column="0"
					 Grid.Row="1"
					 Padding="0"
					 ItemsSource="{Binding EarthquakeList}"
					 SelectedItem="{Binding SelectedEarthquake}">
				<ListBox.ItemTemplate>
					<DataTemplate DataType="{x:Type m:EarthquakeItemTemplate}">
						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="50"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="90"/>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="2*"/>
								<RowDefinition Height="3*"/>
							</Grid.RowDefinitions>
							<TextBlock Text="{Binding IntensityDisplay}"
									   VerticalAlignment="Center"
									   HorizontalAlignment="Center"
									   FontSize="28"
									   FontWeight="ExtraBold"
									   Foreground="{Binding IntensityColour}"
									   Grid.Column="0"
									   Grid.Row="0"
									   Grid.RowSpan="2"/>
							<TextBlock Text="{Binding OriginTimeDisplay}"
									   HorizontalAlignment="Left"
									   VerticalAlignment="Bottom"
									   Grid.Column="1"
									   Grid.Row="0"/>
							<TextBlock Text="{Binding HypocentreDisplay}"
									   HorizontalAlignment="Left"
									   VerticalAlignment="Bottom"
									   FontSize="18"
									   FontWeight="SemiBold"
									   Grid.Column="1"
									   Grid.Row="1"/>
							<TextBlock HorizontalAlignment="Right"
									   VerticalAlignment="Bottom"
									   Grid.Column="2"
									   Grid.Row="0">
								<Run Text="{Binding DepthValueDisplay}"
									 FontWeight="SemiBold"/>
								<Run Text="{Binding DepthUnitDisplay}"
									 FontWeight="SemiLight"/>
							</TextBlock>
							<TextBlock HorizontalAlignment="Right"
									   VerticalAlignment="Bottom"
									   Grid.Column="2"
									   Grid.Row="1">
								<Run Text="{Binding MagnitudeUnitDisplay}"
									 FontWeight="SemiLight"/>
								<Run Text="{Binding MagnitudeValueDisplay}"
									 FontSize="18"
									 FontWeight="SemiBold"/>
							</TextBlock>
						</Grid>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
			<Button Grid.Column="0"
					Grid.Row="2"
					Content="Load 10 More Earthquakes"
					Command="{Binding LoadExtraEarthquakesCommand}"
					HorizontalAlignment="Center"/>
		</Grid>
	</Grid>
	
</UserControl>
